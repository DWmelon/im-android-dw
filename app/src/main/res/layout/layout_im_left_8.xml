<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_15"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15"
    android:gravity="top">


    <ImageView
        android:id="@+id/iv_im_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_im_session_left"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="45dp"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_im_left_8_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/im_choose_course_1"
            android:textColor="@color/common_title_txt_color"
            android:textSize="16sp"/>

        <GridView
            android:id="@+id/gv_im_8_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:horizontalSpacing="15dp"
            android:verticalSpacing="@dimen/margin_10"
            android:scrollbars="none"
            android:numColumns="2" />

    </LinearLayout>


</LinearLayout>
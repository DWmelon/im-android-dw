<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15"
    android:gravity="top">


    <ImageView
        android:id="@+id/iv_im_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_im_session_left"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="45dp"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/im_have_not_answer"
            android:textColor="@color/common_title_txt_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_im_6_submit_question"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_5"
            android:background="@drawable/bg_corner_blue"
            android:gravity="center"
            android:text="@string/im_submit_question"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>